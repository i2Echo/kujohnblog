nav.text-center
  if pages > 1
    ul.pagination
      if !isFirstPage
        li
          a(href='/user/settings/articleManage/#{page-1}', aria-label="Previous")
            span(aria-hidden="true") &laquo;
      - for (var i=1; i<=pages; i++){
      - var isActive = (page == i) ? 'active': ''
      li(class='#{isActive}')
        a(href='/user/settings/articleManage/#{i}') #{i}
          span.sr-only
      - }
      if !isLastPage
        li
          a(href='/user/settings/articleManage/#{page+1}', aria-label="Next")
            span(aria-hidden="true") &raquo;