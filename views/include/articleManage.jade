.panel.panel-default.profile-panel
  .panel-heading
    h1.panel-title Article list
  .table-responsive.p15
    table.table.table-hover.table-striped.text-center
      thead
        tr.item
          th Title
          th Time
          th Operation
      for article in articles
        tr
          td #{article.title}
          td #{article.time}
          td
            a.m0-5(href='/article/#{article._id}') View
            a.m0-5(href='/article/#{article._id}') Update
            a.m0-5(href='/articleManage/delArticle/#{article._id}') Delete

