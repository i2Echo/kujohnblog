each article in articles
  .content-box.container-fluid
    .box-title
      a.h3(href='#') #{article.title}
    .discrible
      span
        i.fa.fa-user
        a.author.h5(href='#') #{article.name}
      span.post-time.pull-right
        i.fa.fa-clock-o
        | #{article.time}
    .box-body

      p.text-indent #{article.content}
      a#more(href='/article:_id') READ MORE
    .box-foot.row
      .archive.col-sm-2
        i.fa.fa-folder
        span python
      .tag.col-sm-8
        i.fa.fa-tags
        span tags
      .col-sm-2
        i.fa.fa-comments
        span 2
        i.fa.fa-star-o
        span 6

nav.text-center
  ul.pagination
    li.disabled
      a(href='#', aria-label="Previous")
        span(aria-hidden="true") &laquo;
    li.active
      a(href='#') 1
        span.sr-only
    - for (var i=2; i<6; i++){
    li
      a(href='#') #{i}
        span.sr-only
    - }
    li
      a(href='#', aria-label="Next")
        span(aria-hidden="true") &raquo;