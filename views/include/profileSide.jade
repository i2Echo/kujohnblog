.side-box.container-fluid#profile-box
  .profile-box-title.h4 Profile
  .profile-box-body.text-center
    .profile-logo
      a(href='#')
        img.img-circle(width='100', height='100', src='#{user.profilePic}')
    .profile-info
      h4
        strong #{title}
      h5
        strong About
      p a student of the CCNU
      .row.container-fluid
        .container-fluid.user-meta
          .art
            a(href='/#{title}/page/1')
              i.fa.fa-file-text
                strong #{count}
              span Articles
        .container-fluid.user-meta
          .foll
            a(href='#')
              i.fa.fa-heart
                strong 7
              span Following
        .container-fluid.user-meta
          .fav
            a(href='#')
              i.fa.fa-user
                strong 34
              span Followers
      if user
        .user-btn.row.text-center
          a.btn.btn-success(href='/user/settings/profile')
            span.fa.fa-cog
            | Setting
          a.btn.btn-success(href='/post')
            span.fa.fa-edit
            | Post
      else
        .user-btn.row.text-center
          a.btn.btn-success
            span.fa.fa-envelope
            | Send
          a.btn.btn-success
            span.fa.fa-user-plus
            | Follow
